{
  "name": "backend",
  "version": "1.0.0",
  "description": "Projeto Seus-Medicamentos que traz informações sobre medicamentos e interações medicamentosas entre 2 ou mais medicamentos",
  "main": "./build/server",
  "scripts": {
    "start": "ts-node ./build/server.ts",
    "build": "npx -y tsc",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "dev": "ts-node-dev src/server.ts",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "test": "mocha --require ts-node/register src/tests/**/*.ts"
  },
  "author": "Tatiana Stoiev do Carmo",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.13.0",
    "@types/sequelize": "^4.28.20",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.4.1",
    "chai-http": "^4.3.0",
    "express": "^4.19.2",
    "mocha": "^10.6.0",
    "sequelize-cli": "^6.6.2",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mysql2": "^3.10.0",
    "nodemon": "^3.1.2",
    "sequelize": "^6.37.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
